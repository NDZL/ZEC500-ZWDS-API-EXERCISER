<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.AppCompat.Light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">


    <include
        layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/lin_connection_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_Nfc_tap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawablePadding="8dp"
                android:text="Tap To Connect"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_Scan_QR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawablePadding="8dp"
                android:text="Scan To Connect"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_proximity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawablePadding="8dp"
                android:visibility="gone"
                android:text="Proximity Settings"
                android:textColor="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_connection_status"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="Device Connected Successfully"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp" />


        <Button
            android:id="@+id/btn_desktop_mode_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimaryDark"
            android:drawablePadding="8dp"
            android:text="Desktop Mode Settings"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_disconnect_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:drawablePadding="8dp"
            android:text="Disconnect Device"
            android:textColor="@color/white" />


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp">

            <ImageView
                android:id="@+id/logoIconViewMobile"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_170sdp"
                android:contentDescription="App Icon"
                android:src="@drawable/phone_icon_tap" />

        </FrameLayout>

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:text="@string/scan_the_qr_on_the_external_display_to_initiate_a_connection"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp" />

        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/scanning_the_qr_code_with_your_handheld_or_tablet_will_allow_you_to_connect"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>

</RelativeLayout>